import Layout from "../layouts/Layout.astro";
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import KanbanBoard from "../components/KanbanBoard.astro";
import KanbanColumn from "../components/KanbanColumn.astro";
import KanbanCard from "../components/KanbanCard.astro";
import Modal from "../components/Modal.astro";

const todos = [
  {
    id: 1,
    label: "Design System",
    title: "Create Design System",
    description: "Create a design system for the project",
  },
  {
    id: 2,
    label: "Typography",
    title: "Update Typography",
    description: "Update the typography for the project",
